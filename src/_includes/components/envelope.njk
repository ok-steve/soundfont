<fieldset>
  <legend>Envelope</legend>

  <div class="stack">
    {% for key, label in { attack: 'Attack', decay: 'Decay', sustain: 'Sustain', release: 'Release'} %}
      <div class="[ field ] [ cluster ]">
        <label for="envelope-{{ key }}">{{ label }}</label>
        <input id="envelope-{{ key }}" class="flex-auto" type="range" name="envelope-{{ key }}" max="1" step="0.001" value="{{ initialState.envelope[key] }}">
        <output for="envelope-{{ key }}">{{ initialState.envelope[key] }}</output>
      </div>
    {% endfor %}
  </div>
</fieldset>

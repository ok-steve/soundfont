<fieldset class="border-none m-0 p-0">
  <legend class="text-xl font-bold">Envelope</legend>

  <div class="mt-4">
    <label class="block" for="envelope-attack">Attack</label>
    <input id="envelope-attack" class="w-full" type="range" name="envelope-attack" max="1" step="0.001" value="{{ initialState.envelope.attack }}">
  </div>

  <div class="mt-4">
    <label class="block" for="envelope-decay">Decay</label>
    <input id="envelope-decay" class="w-full" type="range" name="envelope-decay" max="1" step="0.001" value="{{ initialState.envelope.decay }}">
  </div>

  <div class="mt-4">
    <label class="block" for="envelope-sustain">Sustain</label>
    <input id="envelope-sustain" class="w-full" type="range" name="envelope-sustain" max="1" step="0.001" value="{{ initialState.envelope.sustain }}">
  </div>

  <div class="mt-4">
    <label class="block" for="envelope-release">Release</label>
    <input id="envelope-release" class="w-full" type="range" name="envelope-release" max="1" step="0.001" value="{{ initialState.envelope.release }}">
  </div>
</fieldset>

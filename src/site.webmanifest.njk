---
permalink: site.webmanifest
---
{
  "name": "{{ siteData.name | capitalize }}",
  "short_name": "{{ siteData.name | capitalize }}",
  "description": "{{ siteData.description }}",
  "start_url": "{{ '/' | url }}",
  "icons": [
    {
      "src": "{{ '/assets/android-chrome-192x192.png' | url }}",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "{{ '/assets/android-chrome-512x512.png' | url }}",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "theme_color": "{{ siteData.color }}",
  "background_color": "#ffffff",
  "display": "standalone"
}

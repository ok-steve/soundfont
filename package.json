{
  "name": "synthia",
  "private": true,
  "version": "0.5.1",
  "description": "A configurable, modular synthesizer.",
  "main": "dist/main.js",
  "directories": {
    "lib": "dist"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist && mkdirp dist/assets",
    "copy": "cpy '*.{ico,xml,json}' 'assets/*.{png,svg}' 'service-worker.js' '../dist' --cwd=src --parents",
    "serve": "npm run watch:html & NODE_ENV=development webpack-dev-server --content-base dist/ --port 3000",
    "build:html": "nunjucks *.njk data.json -p src -o dist",
    "build:app": "NODE_ENV=production webpack",
    "prebuild": "npm run clean && npm run copy",
    "watch:html": "onchange 'src/**/*.njk' -- npm run build:html",
    "build": "npm run build:html & npm run build:app",
    "test": "echo \"Error: no test specified \" && exit 1",
    "start": "npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sccherry/synthia.git"
  },
  "keywords": [
    "audio",
    "midi",
    "pwa"
  ],
  "author": "Steve Cherry <stevenccherry@gmail.com> (https://stevecherry.net/)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/sccherry/synthia/issues"
  },
  "homepage": "https://stevecherry.net/synthia",
  "dependencies": {
    "rxjs": "5.4.2",
    "snabbdom": "0.6.9"
  },
  "devDependencies": {
    "autoprefixer": "7.1.1",
    "awesome-typescript-loader": "3.2.1",
    "cpy-cli": "1.0.1",
    "css-loader": "0.28.4",
    "cssnano": "3.10.0",
    "extract-text-webpack-plugin": "3.0.0",
    "mkdirp": "0.5.1",
    "node-sass": "4.5.3",
    "nunjucks-cli": "0.5.1",
    "onchange": "3.2.1",
    "postcss-cli": "4.0.0",
    "postcss-loader": "2.0.6",
    "rimraf": "2.6.1",
    "sass-loader": "6.0.6",
    "typescript": "2.3.4",
    "webpack": "3.4.1",
    "webpack-dev-server": "2.6.1"
  }
}
